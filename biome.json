{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "organizeImports": {
    "enabled": true,
    "include": [
      "./assets/react/v3"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off"
      },
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "include": [
      "./assets/react/v3"
    ]
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "semicolons": "always",
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingComma": "es5",
      "bracketSpacing": true,
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "lineEnding": "lf",
      "indentStyle": "tab",
      "indentWidth": 2,
      "lineWidth": 120
    },
    "globals": [
      "_"
    ]
  }
}